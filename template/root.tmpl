{{define "root"}}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<title>{{template "title" .}}</title>
	<meta name="description" content="Gio is an open source library for creating portable, immediate mode GUI programs for Android, iOS, Linux, Windows, macOS.">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="icon" type="image/png" href="/files/favicon196.png" sizes="196x196"/>
	<link rel="icon" type="image/png" href="/files/favicon32.png" sizes="32x32"/>
	<link rel="stylesheet" href="/files/style.css?v=3"/>
</head>
	<body>
	<div class="layout-with-sidebar">
		{{ template "nav" . }}

		<div class="layout-content layout-with-caption">
			{{ template "caption" . }}
			<div class="layout-with-toc">
				{{ template "toc" . }}
				<main>{{ template "content" . }}</main>
			</div>
		</div>

		<script type="text/javascript">
			if(location.hash === "") {
				var caption = document.getElementById("caption");
				caption.scrollIntoView(true);
			}
		</script>
		<script src="/scripts.js"></script>
	</body>
</html>
{{end}}
