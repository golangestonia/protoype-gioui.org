{{define "content"}}
{{.Content}}
{{end}}

{{define "title"}}{{ .Front.Title }}{{end}}

{{define "caption"}}
<header>
	<h1>
		<div>{{ .Front.Title }}</div>
		{{ with .Front.Subtitle }}<div class="subtitle">{{.}}</div>{{end}}
	</h1>
</header>
{{end}}

{{define "toc"}}
<aside id="toc">
	<div class="sticky-toc">
		<nav id="nav-toc">
			<ul>
				{{ range $link := .TableOfContents }}
				<li><a href="#{{$link.HeadingID}}">{{$link.Title}}</a></li>
				{{ end }}
			</ul>
		</nav>
	</div>
</aside>
{{end}}